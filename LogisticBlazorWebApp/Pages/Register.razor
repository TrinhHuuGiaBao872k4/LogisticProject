@page "/Register"

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card p-4 shadow rounded-4" style="width: 400px;">
        <h3 class="text-center mb-4">Đăng ký</h3>

        <input type="text" class="form-control mb-3 rounded-3" placeholder="Họ và Tên">
        <input type="date" class="form-control mb-3 rounded-3" placeholder="Ngày Sinh">
        <input type="number" class="form-control mb-3 rounded-3" placeholder="Căn cước công dân">
        <input type="text" class="form-control mb-3 rounded-3" placeholder="Địa chỉ">
        <input type="number" class="form-control mb-3 rounded-3" placeholder="Số điện thoại">
        <input type="text" class="form-control mb-3 rounded-3" placeholder="Tên đăng nhập">
        <input type="password" class="form-control mb-3 rounded-3" placeholder="Mật khẩu">

        <button class="btn btn-success w-100 mb-3 rounded-3">Đăng ký</button>

        <div class="text-center">
            <p class="mb-1">
                <a href="/login" class="text-decoration-none text-primary">Đã có tài khoản? Đăng nhập</a>
            </p>
            <p>
                <a href="/forgot-password" class="text-decoration-none text-danger">Quên mật khẩu?</a>
            </p>
        </div>
    </div>
</div>